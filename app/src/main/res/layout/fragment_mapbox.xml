<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.kmitlcompanion.presentation.viewmodel.MapboxViewModel" />

        <variable
            name="viewMap"
            type="com.example.kmitlcompanion.ui.mapboxview.helpers.ViewMap" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mapbox_cameraTargetLat="13.7563"
            app:mapbox_cameraTargetLng="100.5018"
            app:mapbox_cameraZoom="9.0"
            mapbox:mapbox_locationComponentEnabled="true"
            mapbox:mapbox_locationComponentPuckBearingSource="heading">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_and_tag_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardViewBG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/materialCardView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@color/kmitl_color"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/search_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:focusableInTouchMode="true"
                            app:iconifiedByDefault="false"
                            app:queryBackground="@android:color/transparent"
                            app:queryHint="ค้นหา......"
                            app:searchIcon="@drawable/ic_baseline_search_24" />

                    </com.google.android.material.card.MaterialCardView>

                </com.google.android.material.card.MaterialCardView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_recyclerview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:iconifiedByDefault="false"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialTagCardView"
                    app:layout_constraintVertical_bias="0.0">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/materialTagCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialCardViewBG">


                    <TextView
                        android:id="@+id/text_tag_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="กรองด้วยแท็กที่คุณสนใจ...."
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tag_re_cy_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_tag_description">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/clear_tag_card_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6.5dp"
                            android:layout_marginEnd="1dp"
                            android:onClick="@{()->viewModel.clearItemTag()}"
                            android:visibility="gone"
                            app:cardBackgroundColor="#FFFFFF"
                            app:cardCornerRadius="22dp"
                            app:cardElevation="1dp"
                            app:layout_constraintEnd_toStartOf="@+id/tag_recycler_view"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:strokeColor="@color/kmitl_color"
                            app:strokeWidth="2dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/tag_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:orientation="horizontal"
                                android:padding="6dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cardView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/image_close_icon"
                                        android:layout_width="26dp"
                                        android:layout_height="26dp"
                                        android:layout_gravity="center"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_baseline_close_24"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:tint="#FF5722" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </com.google.android.material.card.MaterialCardView>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tag_recycler_view"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:scrollbars="none"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/clear_tag_card_view" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tripProgressCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.mapbox.navigation.ui.tripprogress.view.MapboxTripProgressView
                        android:id="@+id/tripProgressView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/stop"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="12dp"
                        android:onClick="@{()->viewModel.updateApplicationMode(0)}"
                        app:srcCompat="@android:drawable/ic_delete" />
                </androidx.cardview.widget.CardView>

                <com.mapbox.navigation.ui.maneuver.view.MapboxManeuverView
                    android:id="@+id/maneuverView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.mapbox.navigation.ui.voice.view.MapboxSoundButton
                    android:id="@+id/soundButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="@{()->viewModel.updateSoundEvent()}"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/maneuverView" />

                <com.mapbox.navigation.ui.maps.camera.view.MapboxRouteOverviewButton
                    android:id="@+id/routeOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="@{()->viewModel.updateRouteOverviewEvent()}"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/soundButton" />

                <com.mapbox.navigation.ui.maps.camera.view.MapboxRecenterButton
                    android:id="@+id/recenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="@{()->viewModel.updateRecenterEvent()}"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/routeOverview" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button2"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="100dp"
                    android:backgroundTint="@color/kmitl_color"
                    android:onClick="@{()->viewModel.goToCreateMapBox()}"
                    app:icon="@drawable/ic_add_24px"
                    app:iconGravity="textStart"
                    app:iconPadding="-2dp"
                    app:iconSize="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                    tools:ignore="SpeakableTextPresentCheck" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.mapbox.maps.MapView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clickable="true"
            android:elevation="8dp"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            app:behavior_hideable="false"
            app:behavior_peekHeight="80dp"
            app:layout_behavior=".ui.mapboxview.helpers.ViewSlider$AutoCloseBottomSheetBehavior">


            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:background="@color/white"
                        android:elevation="2dp"
                        android:translationZ="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.025"
                            app:layout_constraintStart_toStartOf="parent"
                            mapbox:srcCompat="@drawable/ic_location_on_red_24dp" />

                        <HorizontalScrollView
                            android:id="@+id/HScrollView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="70dp"
                            android:scrollbars="none"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/imageView5"
                            tools:ignore="HardcodedText"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/name_location_label_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingRight="20dp"
                                android:text="name"
                                android:textColor="@color/kmitl_color"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/imageView5"
                                tools:ignore="HardcodedText"
                                tools:visibility="visible" />
                        </HorizontalScrollView>


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/drag_handle_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"

                            android:src="@drawable/ic_drag_handle_black_24dp"
                            android:visibility="visible"
                            app:layout_constraintBottom_toTopOf="@+id/HScrollView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@android:color/darker_gray"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/drag_handle_iv" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

<!--                    <Button-->
<!--                        android:id="@+id/navigation"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:onClick="@{()->viewModel.updateApplicationMode(1)}"-->
<!--                        android:text="Button"-->
<!--                        android:visibility="visible"-->
<!--                        tools:layout_editor_absoluteX="317dp"-->
<!--                        tools:layout_editor_absoluteY="112dp" />-->

                    <Button
                        android:id="@+id/navigation"
                        android:layout_width="280dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@color/kmitl_color"

                        android:onClick="@{()->viewModel.updateApplicationMode(1)}"
                        android:paddingRight="20dp"
                        android:strokeColor="#FF5E00"
                        android:text="นำทางสถานที่นี้"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        app:cornerRadius="50dp"
                        app:icon="@drawable/ic_navigate"
                        app:iconTint="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                        app:strokeColor="@color/kmitl_color"
                        app:strokeWidth="5dp" />

                    <TextView
                        android:id="@+id/place_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="place_text"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/navigation" />

                    <TextView
                        android:id="@+id/address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLines="5"
                        android:paddingLeft="50dp"
                        android:paddingRight="20dp"
                        android:text="address"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/place_text" />

                    <TextView
                        android:id="@+id/pin_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="รายละเอียดสถานที่"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/address_text" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager2"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginTop="25dp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toTopOf="@+id/current_location_gps_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pin_header"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/current_location_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:text="Current location:"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/viewPager2"
                        app:layout_constraintTop_toBottomOf="@+id/viewPager2"
                        tools:ignore="HardcodedText"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/current_location_gps_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:layout_constraintBaseline_toBaselineOf="@+id/current_location_label_tv"
                        app:layout_constraintStart_toEndOf="@+id/current_location_label_tv"
                        tools:text="Latitude: 45.23 Longitude 51.56"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/id_location_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:text="Current location:"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/current_location_label_tv"
                        app:layout_constraintTop_toBottomOf="@+id/current_location_label_tv"
                        tools:ignore="HardcodedText"
                        tools:visibility="gone" />


                    <TextView
                        android:id="@+id/description_location_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:maxLines="100"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="pin_description"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/id_location_label_tv"
                        tools:ignore="HardcodedText"
                        tools:visibility="visible" />

                    <Button
                        android:id="@+id/pinlike_button"
                        android:layout_width="160dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:backgroundTint="#FFFFFF"
                        android:onClick='@{()->viewModel.onClickLikeLocationQuery()}'
                        android:text="0"

                        android:textAlignment="center"
                        android:textColor="#FF5E00"
                        android:textSize="18sp"
                        android:typeface="normal"
                        app:cornerRadius="50dp"
                        app:icon="@drawable/ic_like"
                        app:iconGravity="textStart"
                        app:iconPadding="10dp"
                        app:iconSize="30dp"
                        app:iconTint="@color/kmitl_color"
                        app:layout_constraintBottom_toTopOf="@+id/comment_zone"
                        app:layout_constraintEnd_toStartOf="@+id/pinbookmark_button"
                        app:layout_constraintHorizontal_bias="0.50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/description_location_label_tv"
                        app:strokeColor="#FF5E00"
                        app:strokeWidth="5dp" />

                    <Button
                        android:id="@+id/pinbookmark_button"
                        android:layout_width="160dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:backgroundTint="#FFFFFF"
                        android:text="เก็บ"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FF5E00"
                        android:textSize="16sp"
                        android:typeface="normal"
                        app:cornerRadius="50dp"
                        app:icon="@drawable/ic_baseline_bookmark_24"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="35dp"
                        android:onClick="@{()->viewModel.bookMarkUpdate()}"
                        app:iconTint="@color/kmitl_color"
                        app:layout_constraintBottom_toTopOf="@+id/comment_zone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.88"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/description_location_label_tv"
                        app:strokeColor="#FF5E00"
                        app:strokeWidth="5dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/comment_zone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/top_border"
                        app:layout_constraintTop_toBottomOf="@+id/pinlike_button"
                        tools:layout_editor_absoluteX="1dp">

                        <TextView
                            android:id="@+id/comment_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="ความคิดเห็น"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/commendArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/comment_header">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                app:cardCornerRadius="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.19999999">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="31dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_baseline_account_circle_24" />

                            </androidx.cardview.widget.CardView>

                            <EditText
                                android:id="@+id/commend"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="50dp"
                                android:focusableInTouchMode="true"
                                android:inputType="text"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/cardView2"
                                app:layout_constraintTop_toTopOf="@+id/cardView2"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <Button
                                android:id="@+id/send_commend"
                                android:layout_width="100dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:backgroundTint="@color/kmitl_color"
                                android:enabled="false"
                                android:text="โพสต์"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/commend"
                                app:layout_constraintTop_toBottomOf="@+id/commend" />

                            <Button
                                android:id="@+id/edit_comment_btn"
                                android:layout_width="100dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:backgroundTint="@color/kmitl_color"
                                android:enabled="false"
                                android:text="แก้ไข"
                                android:visibility="gone"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintEnd_toEndOf="@+id/commend"
                                mapbox:layout_constraintTop_toBottomOf="@+id/commend" />

                            <Button
                                android:id="@+id/cancel_edit_comment_btn"
                                android:layout_width="100dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginBottom="15dp"
                                android:backgroundTint="@color/white"
                                android:enabled="true"
                                android:text="ยกเลิก"
                                android:textColor="#FF5722"
                                android:visibility="gone"
                                app:layout_constraintEnd_toStartOf="@+id/edit_comment_btn"
                                app:layout_constraintVertical_bias="0.0"
                                app:strokeColor="#FF5722"
                                app:strokeWidth="2dp"
                                mapbox:layout_constraintBottom_toBottomOf="parent"
                                mapbox:layout_constraintEnd_toEndOf="@+id/commend"
                                mapbox:layout_constraintTop_toBottomOf="@+id/commend" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/comment_zone"
                        tools:layout_editor_absoluteY="514dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>