<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.kmitlcompanion.presentation.viewmodel.MapboxViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_locationComponentEnabled = "true"
            mapbox:mapbox_locationComponentPuckBearingSource = "heading"
            app:mapbox_cameraTargetLat="59.31"
            app:mapbox_cameraTargetLng="18.06"
            app:mapbox_cameraZoom="9.0"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button2"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    app:icon="@drawable/ic_add_24px"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="-2dp"
                    android:backgroundTint="@color/kmitl_color"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="100dp"
                    android:onClick="@{()->viewModel.goToCreateMapBox()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.mapbox.maps.MapView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clickable="true"
            android:elevation="8dp"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            app:behavior_hideable="false"
            app:behavior_peekHeight="80dp"
            app:layout_behavior=".ui.mapboxview.helpers.ViewSlider$AutoCloseBottomSheetBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:translationZ="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/drag_handle_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"

                    android:src="@drawable/ic_drag_handle_black_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:tint="@android:color/darker_gray"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/drag_handle_iv" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/current_location_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:text="Current location:"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="HardcodedText"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/current_location_gps_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintBaseline_toBaselineOf="@+id/current_location_label_tv"
                        app:layout_constraintStart_toEndOf="@+id/current_location_label_tv"
                        tools:text="Latitude: 45.23 Longitude 51.56"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/id_location_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:text="Current location:"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="@+id/name_location_label_tv"
                        app:layout_constraintTop_toBottomOf="@+id/name_location_label_tv"
                        tools:ignore="HardcodedText"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/name_location_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:text="Current location:"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="@+id/current_location_label_tv"
                        app:layout_constraintTop_toBottomOf="@+id/current_location_label_tv"
                        tools:ignore="HardcodedText"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/description_location_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:text="Current location:"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="@+id/id_location_label_tv"
                        app:layout_constraintTop_toBottomOf="@+id/id_location_label_tv"
                        tools:ignore="HardcodedText"
                        tools:visibility="visible" />

                    <Button
                        android:id="@+id/navigate_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Navigate"
                        android:onClick="@{()->viewModel.updateNavigationEvent()}"
                        app:layout_constraintStart_toStartOf="@+id/description_location_label_tv"
                        app:layout_constraintTop_toBottomOf="@+id/description_location_label_tv" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager2"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        app:layout_constraintTop_toTopOf="@+id/navigate_btn" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/commendArea"
                        app:layout_constraintTop_toBottomOf="@+id/viewPager2">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            app:cardCornerRadius="1000dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="31dp"
                                android:layout_height="32dp"
                                tools:srcCompat="@tools:sample/avatars" />

                        </androidx.cardview.widget.CardView>

                        <EditText
                            android:id="@+id/commend"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/cardView2"
                            app:layout_constraintTop_toTopOf="@+id/cardView2"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/send_commend"
                            android:layout_width="86dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:text="Send"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/commend"
                            app:layout_constraintTop_toBottomOf="@+id/commend" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteY="514dp"
                        app:layout_constraintTop_toBottomOf="@id/commendArea">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>