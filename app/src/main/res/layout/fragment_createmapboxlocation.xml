<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="viewModel"
            type="com.example.kmitlcompanion.presentation.CreateMapboxLocationViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mapbox_cameraTargetLat="59.31"
            app:mapbox_cameraTargetLng="18.06"
            app:mapbox_cameraZoom="9.0">


        </com.mapbox.maps.MapView>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:onClick="@{()->viewModel.createLocation()}"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="793dp"
            android:layout_height="54dp"
            android:text="TextView"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingTop="3dp"
            android:paddingEnd="16dp"
            android:paddingBottom="3dp"
            />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>